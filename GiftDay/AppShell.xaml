<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GiftDay.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GiftDay.Views"
    Shell.FlyoutBehavior="Disabled">




    <TabBar>
        <Tab Title="Home" Icon="">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:UpcomingEventsView}"
                Route="HomePage" />
        </Tab>
        <Tab Title="Add Person" Icon="">
            <ShellContent
                Title="Add Person"
                ContentTemplate="{DataTemplate local:AddPersonView}"
                Route="AddPersonPage" />
        </Tab>
    </TabBar>
</Shell>
